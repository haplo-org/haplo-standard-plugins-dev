<img
  src=if(transformWidth) {
      url("/download/" file.digest "/" file.fileSize "/webdisplay/w" transformWidth "/h" transformHeight "/" file.filename)
    } else {
      url("/download/" file.digest "/" file.fileSize "/webdisplay/" transform file.filename)
    }
  width=width
  height=height
  title=spec.title
  alt=spec.alt
>
