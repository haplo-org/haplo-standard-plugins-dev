#option:no-tag-attribute-quote-minimisation

<div class="box">
    <p>
        if(wasTakeOver) {
            i("This task was taken over")
        } else {
            if(delegatedMessage) {
                delegatedMessage
            } else {
                i("This task was delegated to {}") { <b> M.workUnit.actionableBy.name </b> }
            }
        }
        " " i("shared-role:action-performed-by") " " row.setByUser.name "."
    </p>
</div>
